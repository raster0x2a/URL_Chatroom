{
    "manifest_version": 2, 
    "name": "URL Chatroom",
    "version": "1.0.0",
    "description": "この拡張機能では、同じサイト(URL)を閲覧している人の間でチャットができます。This extention allows you to chat between visitors to the same site.",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon128.png"
    },
    "browser_action": {
        "default_popup": "options.html"
    },
    "permissions": [
        "http://*/", "https://*/"
    ],
    "content_security_policy": "script-src 'self' https://www.gstatic.com https://jspm.dev https://raster0x2a.github.io; object-src 'self'"
}